doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title 
    // Bootstrap CSS CDN
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
    // Optional: Bootstrap JS bundle (for components like modals, etc.)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
  body.bg-light.d-flex.align-items-center.justify-content-center.min-vh-100
    .container
      .card.shadow-sm.p-4.mx-auto(style="max-width: 600px;")
        .card-body
          h1.card-title.text-center.mb-4= title
          
          p.card-text.text-muted.mb-4 Thanks for your submission! Here's the data we received : 

          ul.list-group.list-group-flush.mb-4
            // Loop through the formData object and display each key-value pair
            each val, key in formData
              li.list-group-item.d-flex.justify-content-between.align-items-center
                strong #{key} 
                span #{val}
          
          .text-center
            a.btn.btn-primary(href="/") Submit another form
